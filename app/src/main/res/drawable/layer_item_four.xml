<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="6dp" />
            <stroke
                android:width="2dp"
                android:color="@color/colorBlack" />
            <solid android:color="@color/colorGray" />
            <size
                android:width="60dp"
                android:height="90dp" />
        </shape>
    </item>

    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/ic_flash_white_36dp" />
    </item>

    <item>
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom">
            <layer-list>
                <item>
                    <shape>
                        <corners android:radius="6dp" />
                        <stroke
                            android:width="2dp"
                            android:color="@color/colorBlack" />
                        <solid android:color="@color/colorGreen" />
                        <size
                            android:width="60dp"
                            android:height="90dp" />
                        <gradient
                            android:angle="225"
                            android:centerColor="@color/colorGreen"
                            android:endColor="@color/colorBrightGreen"
                            android:startColor="@color/colorDarkGreen" />
                    </shape>
                </item>

                <item
                    android:width="36dp"
                    android:height="36dp"
                    android:drawable="@drawable/flash"
                    android:gravity="center" />
            </layer-list>
        </clip>
    </item>
</layer-list>