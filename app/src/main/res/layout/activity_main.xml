<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/layout_divider"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="com.sbthomework.agalochkin.homework001.MainActivity">


    <View
        android:id="@+id/anim_view_second"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layer_item_first" />

    <TextView
        android:id="@+id/anim_view_first"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layer_item_second"
        android:gravity="bottom"
        android:paddingBottom="4dp"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

    <View
        android:id="@+id/anim_view_third"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layer_item_third" />

    <TextView
        android:id="@+id/anim_view_four"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layer_item_four"
        android:gravity="bottom"
        android:paddingBottom="4dp"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />
</LinearLayout>
